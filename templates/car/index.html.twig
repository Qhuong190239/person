{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="text text-black text-capitalize">
        <a href="{{ path("car_add")}}">
        <img src="{{ asset("images/add-button.png")}}" width="100" height="100">
        </a>
    </div>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Car ID</th>
                <th>Car Name</th>
                <th>Car Plate</th>
                <th>Menu</th>
            </tr>    
        </thead>
        <tbody>
        {% for c in car %}
            <tr>
                <td>{{ c.id }}</td>
                <td>{{ c.brand }} {{ c.name }}</td>
                <td>{{ c.plate}}</td>
                <td>
                    <a class="btn btn-outline-dark" href="{{ path ("car_detail", {'id': c.id }) }}">
                        Detail
                    </a>
                    <a class="btn btn-outline-primary" href="{{ path ("car_edit", {'id': c.id})}}">
                        Edit
                    </a>
                    <a class="btn btn-outline-danger" href="{{ path ("car_delete", {'id': c.id }) }}">
                        Delete
                    </a>
                </td>
            </tr>            
        {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}
